<Page x:Class="VisionInspection.PgPlcStatusSPCSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisionInspection"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgPlcStatusSPCSearch">

    <Grid Background="#dddddd">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
                <RowDefinition Height="2.5*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="2" BorderBrush="#bbbbbb">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="#FF0F53BE" FontSize="24" FontWeight="Bold" 
                               Margin="20,0,0,0" VerticalAlignment="Center">
                        Output Search
                    </TextBlock>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="BorderBrush" Value="Silver"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Margin" Value="2,2,2,2"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="2,2,2,2"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Foreground" Value="DodgerBlue"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="24"
                           Background="#aaaaaa" HorizontalContentAlignment="Left">Total search volume</Label>
                    <Label Grid.Row="1" Grid.Column="0">Index</Label>
                    <Label Grid.Row="1" Grid.Column="1">Content</Label>
                    <Label Grid.Row="2" Grid.Column="0">Search Start</Label>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtSearchStart" IsReadOnly="True"></TextBox>
                    <Label Grid.Row="3" Grid.Column="0">Search Done</Label>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtSearchDone" IsReadOnly="True"></TextBox>

                    <Label Grid.Row="5" Grid.Column="0">Total Count</Label>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTotalCount" IsReadOnly="True"></TextBox>
                    <Label Grid.Row="6" Grid.Column="0">Good Count</Label>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtOkCount" IsReadOnly="True"></TextBox>
                    <Label Grid.Row="7" Grid.Column="0">NG Count</Label>
                    <TextBox Grid.Row="7" Grid.Column="1" x:Name="txtNgCount" IsReadOnly="True"></TextBox>
                    <Label Grid.Row="8" Grid.Column="0">Empty Pocket Count</Label>
                    <TextBox Grid.Row="8" Grid.Column="1" x:Name="txtEmCount" IsReadOnly="True"></TextBox>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="Silver"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Margin" Value="5,1,5,1"/>
                            <Setter Property="Padding" Value="5,0,0,0"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="5,2,2,2"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="28"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                            <Setter Property="Margin" Value="5,2,5,2"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1.3*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.ColumnSpan="2" Background="#aaaaaa">Select search condition</Label>
                    <Label Grid.Row="1" Grid.ColumnSpan="2" Background="SkyBlue">Search by date</Label>
                    <UniformGrid Grid.Row="2" Grid.Column="0" Columns="2">
                        <Label Margin="5,2,5,2" Background="#aaaaaa" 
                               HorizontalContentAlignment="Center">Select start date time</Label>
                        <Label Margin="5,2,5,2" Background="#aaaaaa"
                               HorizontalContentAlignment="Center">Select end date time</Label>
                    </UniformGrid>
                    <UniformGrid Grid.Row="3" Columns="2">                        
                        <Calendar x:Name="caStartDate"></Calendar>
                        <Calendar x:Name="caEndDate"></Calendar>
                    </UniformGrid>
                    <UniformGrid Grid.Row="4" Grid.Column="0" Columns="2">                        
                    </UniformGrid>

                    <UniformGrid Grid.Row="5" Columns="3">
                        <Button x:Name="btSearchAll">Search all period</Button>
                        <Button x:Name="btSearchToday">Search Today</Button>
                        <Button x:Name="btSearchTime">Search time set</Button>
                    </UniformGrid>

                    <Label Grid.Row="6" Grid.ColumnSpan="2" Background="SkyBlue">Search LOT ID</Label>
                    <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="txtLotId"></TextBox>
                        <Button Grid.Column="1" x:Name="btSearchId">Search ID</Button>
                    </Grid>
                </Grid>
            </Grid>

            <Border Grid.Row="2" BorderThickness="2" BorderBrush="#bbbbbb" 
                    Background="#aaaaaa">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Label">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label FontWeight="Bold">Search result LOT information</Label>
                    <Label Margin="20,0,0,0" x:Name="lblLotCount"></Label>
                </StackPanel>
            </Border>

            <DataGrid Grid.Row="3" x:Name="dgridResults" FontSize="16"
                      CanUserAddRows="false" CanUserDeleteRows="False" SelectionMode="Single"
                      AutoGenerateColumns="False" HorizontalContentAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="LOT ID"
                                        Binding="{Binding LotId}" Width="200"></DataGridTextColumn>
                    <DataGridTextColumn Header="START"
                                        Binding="{Binding StartTime}" Width="200"></DataGridTextColumn>
                    <DataGridTextColumn Header="END"
                                        Binding="{Binding EndTime}" Width="200"></DataGridTextColumn>
                    <DataGridTextColumn Header="LOT SIZE" 
                                        Binding="{Binding LotQty}" Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Header="GOOD" 
                                        Binding="{Binding OkCount}" Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Header="NG" 
                                        Binding="{Binding NgCount}" Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Header="EMPTY" 
                                        Binding="{Binding EmCount}" Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Header="YIELD" 
                                        Binding="{Binding YieldString}" Width="1*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Column="1" BorderThickness="2" BorderBrush="#cccccc" Margin="0,0,0,0">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10,0,0,0"/>
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="Margin" Value="4,2,4,2"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="#cccccc" BorderThickness="1" Margin="0,0,0,0">
                    <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center"
                               Foreground="#FF13ABE9"
                               FontSize="20" FontWeight="Bold">Status Menu</TextBlock>
                </Border>
                <Button Grid.Row="1" Name="btLog">Log</Button>
                <Button Grid.Row="2" Name="btSpcOutput">SPC Output</Button>
                <Button Grid.Row="3" Name="btSpcSearch" Background="SkyBlue">SPC Search</Button>
            </Grid>
        </Border>
    </Grid>
</Page>
