<Page x:Class="VisionInspection.PgPlcStatusLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisionInspection"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1300"
      Title="PgStatusLog">

    <Grid Background="#dddddd">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>                
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="2" BorderBrush="#bbbbbb">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="#FF0F53BE" FontSize="24" FontWeight="Bold" 
                               Margin="20,0,0,0" VerticalAlignment="Center">
                        Log File
                    </TextBlock>
                </Grid>
            </Border>

            <TabControl Grid.Row="1" FontSize="20">
                <TabItem Header="Alarm">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0" Grid.Column="0" x:Name="dgridAlarms" FontSize="16"
                              CanUserAddRows="false" CanUserDeleteRows="False" SelectionMode="Single"
                              AutoGenerateColumns="False" HorizontalContentAlignment="Center">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Binding="{Binding Id}" Width="50"></DataGridTextColumn>
                                <DataGridTextColumn Header="Date Time" Binding="{Binding CreatedTime}" Width="200"></DataGridTextColumn>
                                <DataGridTextColumn Header="Jam String" Binding="{Binding Message}" Width="1*"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <UniformGrid Grid.Row="1" Columns="7">
                            <UniformGrid.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                                    <Setter Property="Margin" Value="4,4,0,4"/>
                                    <Setter Property="FontSize" Value="20"/>
                                </Style>
                            </UniformGrid.Resources>

                            <Button x:Name="btAlarmFirst">|&lt; First</Button>
                            <Button x:Name="btAlarmPrePage">&lt;&lt; Pre Page</Button>
                            <Button x:Name="btAlarmPrevious">&lt; Previous</Button>
                            <Button x:Name="btAlarmCurrent" Foreground="White" Background="DarkViolet">2449/2449</Button>
                            <Button x:Name="btAlarmNext">Next &gt;</Button>
                            <Button x:Name="btAlarmNextPage">Next Page &gt;&gt;</Button>
                            <Button x:Name="btAlarmLast">Last &gt;|</Button>
                        </UniformGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Event">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0" Grid.Column="0" x:Name="dgridLogs" FontSize="16"
                              CanUserAddRows="false" CanUserDeleteRows="False" SelectionMode="Single"
                              AutoGenerateColumns="False" HorizontalContentAlignment="Center">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Binding="{Binding Id}" Width="50"></DataGridTextColumn>
                                <DataGridTextColumn Header="Date Time" Binding="{Binding CreatedTime}" Width="200"></DataGridTextColumn>
                                <!--<DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="150"></DataGridTextColumn>-->
                                <DataGridTextColumn Header="User ID" Binding="{Binding Username}" Width="160"></DataGridTextColumn>
                                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="1*"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <UniformGrid Grid.Row="1" Columns="7">
                            <UniformGrid.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                                    <Setter Property="Margin" Value="4,4,0,4"/>
                                    <Setter Property="FontSize" Value="24"/>
                                </Style>

                                <Style TargetType="{x:Type DatePickerTextBox}">
                                    <Setter Property="Control.Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBox
                                                    Text="{Binding Path=SelectedDate, StringFormat='yyyy-MM-dd', 
                                                    RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </UniformGrid.Resources>

                            <Button x:Name="btLogPrevious">Previous &lt;</Button>
                            <DatePicker x:Name="dtLogDate" Margin="2,0,2,0"
                                VerticalContentAlignment="Center" VerticalAlignment="Center" FontSize="20" 
                                FirstDayOfWeek="Monday"></DatePicker>
                            <Button x:Name="btLogNext">&gt; Next</Button>
                            <Button x:Name="btLogToday">Today</Button>
                            <Button x:Name="btLogPrePage">Pre Page</Button>
                            <Button x:Name="btLogCurrent" Background="DarkViolet" Foreground="White">0</Button>
                            <Button x:Name="btLogNextPage">Next Page</Button>
                        </UniformGrid>
                    </Grid>
                </TabItem>
            </TabControl>
            
        </Grid>

        <Border Grid.Column="1" BorderThickness="2" BorderBrush="#cccccc" Margin="0,0,0,0">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10,0,0,0"/>
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="Margin" Value="4,2,4,2"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="#cccccc" BorderThickness="1" Margin="0,0,0,0">
                    <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center"
                               Foreground="#FF13ABE9"
                               FontSize="20" FontWeight="Bold">Status Menu</TextBlock>
                </Border>
                <Button Grid.Row="1" Name="btLog" Background="SkyBlue">Log</Button>
                <Button Grid.Row="2" Name="btSpcOutput">SPC Output</Button>
                <Button Grid.Row="3" Name="btSpcSearch">SPC Search</Button>
            </Grid>
        </Border>
    </Grid>
</Page>
