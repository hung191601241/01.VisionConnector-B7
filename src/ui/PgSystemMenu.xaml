<Page x:Class="AutoLaserCuttingInput.PgSystemMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoLaserCuttingInput"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgSystemMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas Margin="0 290 0 0">
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1" Background="LightGreen" Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" BorderThickness="0" >
                            <StackPanel Orientation="Horizontal">

                                

                                <TextBlock Padding="10" Text="    MES    " Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting2"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                
                                <TextBlock Padding="10" Text=" Machine"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <!--<Button x:Name="btSetting3"  Height="60" Width="215" >
                          <StackPanel Orientation="Horizontal">
                              -->
                        <!-- Add an Image control here with the source attribute pointing to your image file -->
                        <!--
                              <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                              <TextBlock Padding="10" Text="Setting 3"  Margin="10" VerticalAlignment="Center"/>
                          </StackPanel>
                      </Button>-->



                        <!--<Button x:Name="btSetting4"  Height="60" Width="215" >
                          <StackPanel Orientation="Horizontal">
                              -->
                        <!-- Add an Image control here with the source attribute pointing to your image file -->
                        <!--
                              <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                              <TextBlock Padding="10" Text="Setting 4"  Margin="10" VerticalAlignment="Center"/>
                          </StackPanel>
                      </Button>-->

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> System Menu
                </Label>
                <Button Grid.Column="2" x:Name="BtnUndo" Width="150" HorizontalAlignment="Right" Margin="4 4 40 4">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock   VerticalAlignment="Center" Padding="20,0,0,0" >Undo</TextBlock>
                    </StackPanel>
                </Button>
                <!--<Button  Grid.Column="1" x:Name="BtnSave" Width="150" HorizontalAlignment="Right" Margin="0 3 50 3">
                  <StackPanel Orientation="Horizontal">
                      <Image Source="/Folder/PageUI/Icon/save.png" Margin="2"/>
                      <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                  </StackPanel>
              </Button>-->
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="1.5*"></RowDefinition>

                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border CornerRadius=" 10 " Margin="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> System Mes
                    </Label>
                </Grid>



                <Grid Grid.Row="1">
                    <UniformGrid Grid.Row="1" Margin="10,0,10,0" Columns="3" Rows="2">
                        <UniformGrid.Resources>
                            <Style TargetType="GroupBox">
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="Margin" Value="2,2,2,2"/>
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                <Setter Property="FontSize" Value="24"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="9,9,9,9"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Margin" Value="5,5,5,5"/>
                            </Style>
                            <Style TargetType="TextBlock" x:Key="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="Foreground" Value="black"/>
                            </Style>
                            <Style TargetType="TextBlock" x:Key="TextBlock2">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                            <Style TargetType="Rectangle" x:Key="Rect2">
                                <Setter Property="Width" Value="25"/>
                                <Setter Property="Height" Value="18"/>
                                <Setter Property="Fill" Value="White"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Setter Property="Stroke" Value="Silver"/>
                            </Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Width" Value="100"/>
                                <Setter Property="Height" Value="10"/>
                                <Setter Property="Fill" Value="White"/>
                                <Setter Property="StrokeThickness" Value="2"/>
                                <Setter Property="Stroke" Value="Gray"/>
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Setter Property="Margin" Value="4,2,4,2"/>
                            </Style>
                        </UniformGrid.Resources>

                        <GroupBox Header="[MES SEVER IF]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btMesOnline">
                                    <StackPanel>
                                        <!--<Rectangle Name="rectLoaderUp"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">ONLINE</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" Name="btMesOffline">
                                    <StackPanel Orientation="Vertical">
                                        <!--<Rectangle x:Name="rectLoaderDown"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">OFFLINE</TextBlock>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[MIX LOT]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btMixLottON">
                                    <StackPanel>
                                        <!--<Rectangle Name="rectLoaderUp"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">ON </TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" Name="btMixLottOFF">
                                    <StackPanel Orientation="Vertical">
                                        <!--<Rectangle x:Name="rectLoaderDown"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">OFF</TextBlock>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DOUBLE CODE]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDoubleCodeON">
                                    <StackPanel>
                                        <!--<Rectangle Name="rectLoaderUp"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" Name="btDoubleCodeOFF">
                                    <StackPanel Orientation="Vertical">
                                        <!--<Rectangle x:Name="rectLoaderDown"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">OFF</TextBlock>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[BY PASS VISION]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="0.2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btByPassVisionON">
                                    <StackPanel>
                                        <!--<Rectangle Name="rectLoaderUp"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" Name="btByPassVisionOFF">
                                    <StackPanel Orientation="Vertical">
                                        <!--<Rectangle x:Name="rectLoaderDown"/>-->
                                        <TextBlock Style="{StaticResource TextBlock}">OFF</TextBlock>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </GroupBox>


                    </UniformGrid>




                </Grid>

                <Grid Grid.Row="2">
                    <Border CornerRadius=" 10 " Margin="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> System Mes
                    </Label>
                </Grid>

                <Grid Grid.Row="3">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.Resources>

                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="#333333" />
                            <Setter Property="Padding" Value="1,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="FontWeight" Value="Bold"/>

                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Stretch" />
                            <Setter Property="Background" Value="White" />
                            <Setter Property="Margin" Value="1,1,1,1" />
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#6787c0"/>
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="Margin" Value="3 0 3 0"/>

                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="Cyan"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="26"/>
                            <Setter Property="Padding" Value="1,1,1,1"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="CadetBlue"/>
                        </Style>

                    </Grid.Resources>

                    <Label Grid.Row="0" Grid.Column="0" BorderThickness="1"  BorderBrush="CadetBlue"  Margin="1">Number Scanner Reactivations</Label>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TbxNumberScannerTrigger"  Margin="1" Text="00" ></TextBox>
                    <Label Grid.Row="0" Grid.Column="2" BorderThickness="1"  BorderBrush="CadetBlue"  Margin="1">Number</Label>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
