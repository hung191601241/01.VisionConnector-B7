<Page x:Class="VisionInspection.PgPlcSystemRun"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisionInspection"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="PgPlcSystemRun">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="2,0,2,2" Name="gridLeft">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#bbbbbb" MinHeight="60">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="#FF0F53BE" FontSize="24" FontWeight="Bold" FontStyle="Italic" 
                               Margin="20,0,0,0" VerticalAlignment="Center">
                        Run Mode Setting
                    </TextBlock>
                    <Button Grid.Column="1" Style="{StaticResource mButton}" Name="btUndo">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="undo.png" />
                            <TextBlock VerticalAlignment="Center" Margin="10,0,10,0"
                                       FontSize="24" FontWeight="Bold">Undo</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            <TabControl Name="TabControl" Grid.Row="1">
                <TabItem Height="50" Header="    SETUP CHNNEL 1    ">
                    <UniformGrid Grid.Row="1" Margin="20,0,20,0" Columns="2" Rows="4">
                        <UniformGrid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="24"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Margin" Value="5,0,5,0"/>
                                <Setter Property="Padding" Value="0,10,0,10"/>
                            </Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="Margin" Value="20,0,20,0"/>
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                                <Setter Property="Margin" Value="20,2,20,2"/>
                                <Setter Property="Foreground" Value="#555555"/>
                                <Setter Property="BorderBrush" Value="#aaaaaa"/>
                            </Style>
                        </UniformGrid.Resources>
                        <GroupBox Header="[Vision Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnVisionOn_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle Width="100" Height="10" Fill="DarkGray" Name="recVisionOn_ch1"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnVisionOff_ch1" >
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recVisionOff_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" >OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Lamp Machine Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnLampMCOn_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLampMCOn_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnLampMCOff_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLampMCOff_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Door Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnDoorOn_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recDoorOn_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnDoorOff_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recDoorOff_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Light Curtain Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnLightCurtainOn_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLightCurtainOn_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnLightCurtainOff_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLightCurtainOff_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Product Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnProductOn_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recProductOn_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnProductOff_ch1">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recProductOff_ch1" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                    </UniformGrid>
                </TabItem>
                <TabItem Height="50" Header="    SETUP CHNNEL 2    ">
                    <UniformGrid Grid.Row="1" Margin="20,0,20,0" Columns="2" Rows="4">
                        <UniformGrid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="24"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Margin" Value="5,0,5,0"/>
                                <Setter Property="Padding" Value="0,10,0,10"/>
                            </Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="Margin" Value="20,0,20,0"/>
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                                <Setter Property="Margin" Value="20,2,20,2"/>
                                <Setter Property="Foreground" Value="#555555"/>
                                <Setter Property="BorderBrush" Value="#aaaaaa"/>
                            </Style>
                        </UniformGrid.Resources>
                        <GroupBox Header="[Vision Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnVisionOn_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle Width="100" Height="10" Fill="DarkGray" Name="recVisionOn_ch2"/>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnVisionOff_ch2" >
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recVisionOff_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" >OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Lamp Machine Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnLampMCOn_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLampMCOn_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnLampMCOff_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLampMCOff_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Door Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnDoorOn_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recDoorOn_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnDoorOff_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recDoorOff_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Light Curtain Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnLightCurtainOn_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLightCurtainOn_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnLightCurtainOff_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recLightCurtainOff_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                        <GroupBox Header="[Product Status]">
                            <UniformGrid Columns="2">
                                <Button x:Name="btnProductOn_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recProductOn_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnProductOff_ch2">
                                    <StackPanel Orientation="Vertical">
                                        <Rectangle x:Name="recProductOff_ch2" Width="100" Height="10" Fill="DarkGray" />
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">OFF</TextBlock>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </GroupBox>
                    </UniformGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <Border Grid.Column="1" BorderThickness="1" BorderBrush="#cccccc" Margin="0,0,0,0">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="10,0,0,0"/>
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="Margin" Value="4,2,4,2"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Background="#FFC2DEEA" Name="btRun">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20" Height="30" Fill="DarkGray" />
                        <TextBlock VerticalAlignment="Center" Padding="10,0,0,0">Run Mode</TextBlock>
                    </StackPanel>
                </Button>

            </Grid>
        </Border>

    </Grid>
</Page>
