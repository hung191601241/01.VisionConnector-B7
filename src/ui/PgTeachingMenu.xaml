<Page x:Class="AutoLaserCuttingInput.PgTeachingMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoLaserCuttingInput"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgTeachingMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1100*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="0.55*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label x:Name="txtMenu" FontWeight="Bold" Foreground="White" FontSize="24"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Teaching Menu
                </Label>
                <Button Grid.Column="1" x:Name="BtnSave" Width="150" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="save.png" Margin="2"/>
                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <TabControl  Grid.Column="0" FontSize="15" BorderThickness="1" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2">

                    <TabItem FontSize="16" Foreground="White" Height="30">
                        <TabItem.Header>
                            <TextBlock Text="JOG Position" FontSize="18" Foreground="Black" />
                        </TabItem.Header>
                        <Grid>
                            <Grid.Resources>

                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="#333333" />
                                    <Setter Property="Padding" Value="1,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="FontSize" Value="18" />

                                </Style>
                                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Margin" Value="1,1,1,1" />
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#6787c0"/>
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="Margin" Value="3 0 3 0"/>

                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="Orange"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Padding" Value="1,1,1,1"/>
                                </Style>

                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                <ColumnDefinition Width="0.45*"></ColumnDefinition>
                                <ColumnDefinition Width="0.45*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Label BorderThickness="1"  BorderBrush="CadetBlue"  Margin="1">Status Axis X</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="lbAx1PosCurrent" Grid.Column="0" Margin="1" Style="{StaticResource LabelDark}" Content="0000"></Label>
                                    <Label Grid.Column="1" >mm</Label>
                                    <Label x:Name="lbAx1ErrorCode" Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}" Foreground="Red">0000</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Margin="2" x:Name="btAx1ServONOFF" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 " x:Name="lbAx1ServoONOFF">Servo ..</Label>
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1" Margin="2" x:Name="btAx1BakeONOFF" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 " x:Name="lbAx1BakeONOFF">Bake ..</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Button x:Name="btAx1Home">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="Home.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">HOME</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Button x:Name="btAx1JogDown">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="btup1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">X[-]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Label Grid.Column="1" >JOG mm/s</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <TextBox x:Name="TbxAx1JogSpeed"  Grid.Row="1" Grid.Column="2" Margin="2,2,2,2" Text="0000" FontSize="20" ></TextBox>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Button x:Name="btAx1JogUp">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="btdown1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">X[+]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Label BorderThickness="1"   BorderBrush="CadetBlue" Margin="1">Status Axis Y</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="lbAx2PosCurrent" Grid.Column="0" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                    <Label Grid.Column="1" >mm</Label>
                                    <Label x:Name="lbAx2ErrorCode" Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}" Foreground="Red">0000</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Margin="2" x:Name="btAx2ServONOFF">
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 "  x:Name="lbAx2ServoONOFF">Servo ..</Label>
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1" Margin="2" x:Name="btAx2BakeONOFF">
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 " x:Name="lbAx2BakeONOFF">Bake ..</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Button x:Name="btAx2Home">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="Home.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">HOME</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid >
                                <Grid Grid.Row="0" Grid.Column="1" >
                                    <Button x:Name="btAx2JogUp">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="btup1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">Y[+]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Label Grid.Column="1" >JOG mm/s</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <TextBox x:Name="TbxAx2JogSpeed"  Grid.Row="1" Grid.Column="2" Margin="2,2,2,2" Text="0000" FontSize="20" ></TextBox>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Button x:Name="btAx2JogDown">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="btdown1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">Y[-]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="2" Margin="10 0 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="30"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="0" Fill="Orange" x:Name="RtAx1LimitUp" StrokeThickness="1" Stroke="LightSkyBlue" />
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="1" Fill="Orange" x:Name="RtAx1LimitDown" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="2" Fill="Orange" x:Name="RtAx1ORG" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="3" Fill="Orange" x:Name="RtAx1Error" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <!--<Rectangle Margin="2" Grid.Column="0" Grid.Row="4" Fill="Orange" x:Name="Rtl5" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="5" Fill="Orange" x:Name="Rtl6" StrokeThickness="1" Stroke="LightSkyBlue"/>-->

                                <Label Grid.Column="2" Margin="2" Grid.Row="0" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX X +</Label>
                                <Label Grid.Column="2" Margin="2" Grid.Row="1" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX X -</Label>
                                <Label Grid.Column="2" Margin="2" Grid.Row="2" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX X ORG</Label>
                                <Label Grid.Column="2" Margin="2" Grid.Row="3" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX X ALM</Label>
                                <!--<Label Grid.Column="2" Grid.Row="4" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">I/O 5</Label>
                                <Label Grid.Column="2" Grid.Row="5" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">I/O 6</Label>-->


                            </Grid>
                            <Grid Grid.Column="3" Margin="10 0 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="30"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="0" Fill="Orange" x:Name="RtAx2LimitUp" StrokeThickness="1" Stroke="LightSkyBlue" />
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="1" Fill="Orange" x:Name="RtAx2LimitDown" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="2" Fill="Orange" x:Name="RtAx2ORG" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="3" Fill="Orange" x:Name="RtAx2Error" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <!--<Rectangle Margin="2" Grid.Column="0" Grid.Row="4" Fill="Orange" x:Name="Rtl51" StrokeThickness="1" Stroke="LightSkyBlue"/>
                                <Rectangle Margin="2" Grid.Column="0" Grid.Row="5" Fill="Orange" x:Name="Rtl61" StrokeThickness="1" Stroke="LightSkyBlue"/>-->

                                <Label Grid.Column="2" Grid.Row="0"  Margin="2" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX Y +</Label>
                                <Label Grid.Column="2" Grid.Row="1"  Margin="2" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX Y -</Label>
                                <Label Grid.Column="2" Grid.Row="2"  Margin="2" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX Y ORG</Label>
                                <Label Grid.Column="2" Grid.Row="3"  Margin="2" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">AX Y ALM</Label>
                                <!--<Label Grid.Column="2" Grid.Row="4" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">I/O 5</Label>
                                <Label Grid.Column="2" Grid.Row="5" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15" BorderThickness="0.3" BorderBrush="Black">I/O 6</Label>-->


                            </Grid>


                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
            <Grid Grid.Row="2">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Position Data
                </Label>
            </Grid>
            <Grid Grid.Row="3">
                <TabControl  Grid.Column="0" FontSize="15" BorderThickness="1" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2">
                    <TabItem FontSize="16" Foreground="White" Height="30">
                        <TabItem.Header>
                            <TextBlock Text="Point Jig"  FontSize="18" Foreground="Black" Width="100"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Margin" Value="1,1,1,1" />
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#6787c0"/>
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="Margin" Value="1 0 1 0"/>
                                </Style>

                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Padding" Value="1,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="FontSize" Value="20" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.4*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderThickness="2" BorderBrush="LightSlateGray" Margin=" 2 12 0 2">

                                <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

                                    <Grid x:Name="gridJig" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <!-- Các nút sẽ được thêm vào đây -->
                                        <Grid.Resources>
                                            <Style TargetType="Button">
                                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                <Setter Property="VerticalAlignment" Value="Stretch" />
                                                <Setter Property="Background" Value="White" />
                                                <Setter Property="Margin" Value="1,1,1,1" />
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="BorderBrush" Value="#6787c0"/>
                                                <Setter Property="FontSize" Value="20" />
                                                <Setter Property="Margin" Value="1 0 1 0"/>
                                            </Style>

                                            <Style TargetType="{x:Type Label}">
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="Padding" Value="1,0" />
                                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                <Setter Property="FontSize" Value="20" />
                                            </Style>
                                        </Grid.Resources>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                            <GroupBox Grid.Column="1" Foreground="Black" BorderBrush="LightSlateGray" VerticalContentAlignment="Center"  Header=" Point "  FontSize="20" BorderThickness="2" FontFamily="Arial" FontWeight="SemiBold" Margin="0 0 0 0" Padding="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">POS MT</Label>
                                    <!--<Label Grid.Column="0" Grid.Row="1"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">POS 1st</Label>-->
                                    <!--<Label Grid.Column="0" Grid.Row="2"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">Axis Y Jig</Label>-->
                                    <!--<Label Grid.Row="1" Grid.Column="1"  Style="{StaticResource LabelDark}" x:Name="LbPosP0"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>-->
                                    <Label Grid.Row="0" Grid.Column="1"  Style="{StaticResource LabelDark}" x:Name="LbPosMatrix"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <!--<Label Grid.Row="2" Grid.Column="1"  Style="{StaticResource LabelDark}" x:Name="LbPositio"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>-->
                                    <!--<Label Grid.Column="2" Grid.Row="1"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">mm</Label>-->
                                    <Label Grid.Column="3" Grid.Row="0"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">No</Label>
                                    <!--<Label Grid.Column="2" Grid.Row="2"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">mm</Label>-->

                                    <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="btMovePosVision" Margin="2 3" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Move POS Vision"/>
                                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" x:Name="btMovePosScanner" Margin="2 3" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Move POS Scanner"/>
                                </Grid>
                            </GroupBox>


                            <!--<GroupBox Grid.Column="2" Grid.Row="0" Foreground="Black" BorderBrush="LightSlateGray" Grid.RowSpan="2" Header="Move Point Tray" FontSize="20" BorderThickness="2" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2" Padding="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0"  x:Name="btInTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Input Tray"/>
                                    <Button Grid.Row="1" x:Name="btOutTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Output Tray"/>
                                    <Button Grid.Row="2" x:Name="bt1stTray_X_Run" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="1st X Tray"/>
                                    <Button Grid.Row="3" x:Name="bt1stTray_Y_Run" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="1st Y Tray"/>
                                    <Button Grid.Row="4" x:Name="btTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Pos' Tray"/>
                                </Grid>
                            </GroupBox>

