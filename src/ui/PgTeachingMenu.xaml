                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0"  x:Name="btInTrayRun01" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Input Tray"/>
                                    <Button Grid.Row="1" x:Name="btOutTrayRun02" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Output Tray"/>
