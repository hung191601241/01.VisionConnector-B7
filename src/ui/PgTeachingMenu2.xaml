<Page x:Class="AutoLaserCuttingInput.PgTeachingMenu2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoLaserCuttingInput"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgTeachingMenu2">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->

                                <TextBlock Padding="10" Text="Teaching  "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting2" Background="LightGreen"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">

                                <!--Add an Image control here with the source attribute pointing to your image file-->


                                <TextBlock Padding="10" Text="Setup "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!--<Button x:Name="btSetting3"  Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">

                            

                            <TextBlock Padding="10" Text="Manual 2 " Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>-->
                        <!--<Button x:Name="btSetting5"  Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">

                            

                            <TextBlock Padding="10" Text="Robot jog" Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>-->


                        <!--<Button x:Name="btSetting4"  Height="60" Width="215" >
                        <StackPanel Orientation="Horizontal">



                            
                            <TextBlock Padding="10" Text="JIG Setup "  Margin="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>-->

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="0" Margin="4" Name="gridLeft">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="1.5*"></RowDefinition>
                <RowDefinition Height="0*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="90"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>

                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>

                </Style>
            </Grid.Resources>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label Grid.Column="0" FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Teaching Menu
                </Label>
                <Button Grid.Column="1"  x:Name="btSave">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>

                <!--<Button Grid.Column="2" x:Name="btUndo">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="3" Source="/Folder/PageUI/Icon/restore.png"/>
                    <TextBlock   VerticalAlignment="Center" Padding="20,0,0,0" >Undo</TextBlock>
                </StackPanel>
            </Button>-->

            </Grid>

            <Border Grid.Row="1" BorderThickness="2" BorderBrush="#bbbbbb" >

            </Border>
            <Border CornerRadius=" 10 " Grid.Row="3">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#879ec0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Label Grid.Row="3" FontWeight="Bold" Foreground="White" FontSize="25"  Margin="0,0,10,0" >
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                </Label.Effect> Jig Information Setting
            </Label>

            <Grid Grid.Row="4" Margin="20,0,20,0">
                <Grid.Resources>
                    <Style TargetType="Label">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Margin" Value="1,1,1,1"/>
                        <Setter Property="Padding" Value="0,0,0,0"/>
                        <Setter Property="BorderBrush" Value="#aaaaaa"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="Cyan"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="Padding" Value="1,1,1,1"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Background="#879ec0">No.</Label>
                    <Label Grid.Row="0" Grid.Column="1" Background="#879ec0">Name</Label>
                    <Label Grid.Row="0" Grid.Column="2" Background="#879ec0">Setting Row</Label>

                    <Label Grid.Row="1" Grid.Column="0" Foreground="Black">1</Label>
                    <Label Grid.Row="1" Grid.Column="1" Background="LightSkyBlue">Row</Label>
                    <TextBox Grid.Row="1" Grid.Column="2" x:Name="tbxRow">0</TextBox>

                    <Label Grid.Row="2" Grid.Column="0" Foreground="Black">2</Label>
                    <Label Grid.Row="2" Grid.Column="1" Background="LightSkyBlue">Y Pitch</Label>
                    <TextBox Grid.Row="2" Grid.Column="2" x:Name="tbxYPitch">00.00</TextBox>
                    
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Background="#879ec0"></Label>
                    <Label Grid.Row="0" Grid.Column="1" Background="#879ec0">Name</Label>
                    <Label Grid.Row="0" Grid.Column="2" Background="#879ec0">Setting Column</Label>

                    <Label Grid.Row="1" Grid.Column="0" Foreground="Blue">X</Label>
                    <Label Grid.Row="1" Grid.Column="1" Background="LightCoral">Column</Label>
                    <TextBox Grid.Row="1" Grid.Column="2" x:Name="tbxColum">0</TextBox>

                    <Label Grid.Row="2" Grid.Column="0" Foreground="Blue">X</Label>
                    <Label Grid.Row="2" Grid.Column="1" Background="LightCoral"> X Pitch</Label>
                    <TextBox Grid.Row="2" Grid.Column="2" x:Name="tbxXPitch">00.00</TextBox>


                </Grid>

                <Grid Grid.Row="1" Grid.Column="1" Margin="15,0,0,0" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="1" Grid.Column="0" Background="SkyBlue">Jig Line ID (T01 ~ T99)</Label>
                    <TextBox Grid.Row="2" Grid.Column="0" x:Name="txtJigLineId"  
     Margin="0,5,0,5" HorizontalContentAlignment="Left"
     FontSize="24" FontWeight="Normal"
     Background="White" Foreground="Blue">T01</TextBox>
                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" x:Name="btSaveJigLineId"
    Margin="5,0,5,5" Style="{StaticResource mButton}"
    FontSize="20" FontWeight="Bold" Foreground="Blue">ID SAVE</Button>

                </Grid>
            </Grid>

        </Grid>


    </Grid>
</Page>
