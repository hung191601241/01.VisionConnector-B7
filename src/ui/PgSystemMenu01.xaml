<Page x:Class="AutoLaserCuttingInput.PgSystemMenu01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoLaserCuttingInput"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgSystemMenu01">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas Margin="0 290 0 0">
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >





                        <Button x:Name="btSetting1"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                
                                <TextBlock Padding="10" Text="    MES    "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btSetting2" Background="LightGreen" Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" BorderThickness="0" >
                            <StackPanel Orientation="Horizontal">

                                

                                <TextBlock Padding="10" Text=" Machine" Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> System Menu
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border CornerRadius=" 10 " Margin="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> System Machine
                    </Label>
                </Grid>



                <Grid Grid.Row="1" Margin="10,0,10,0">

                    <Grid.Resources>
                        <Style TargetType="GroupBox">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="Margin" Value="2,2,2,2"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Margin" Value="9,9,9,9"/>
                            <Setter Property="Background" Value="White"/>
                        </Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Margin" Value="5,5,5,5"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Foreground" Value="black"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock2">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                        </Style>
                        <Style TargetType="Rectangle" x:Key="Rect2">
                            <Setter Property="Width" Value="25"/>
                            <Setter Property="Height" Value="18"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Silver"/>
                        </Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="10"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Gray"/>
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Margin" Value="4,2,4,2"/>
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>


                    <UniformGrid Grid.Column="0" Columns="1" Rows="7">
                        <GroupBox Header="[DRYRUN MODE]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDryRunModel">
                                    <StackPanel>
                                        <!--<Rectangle Name="rectLoaderUp"/>-->
                                        <TextBlock x:Name="tbxDryRunModel" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[STEP RUN ON]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btStepRunOn">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectStopperUp"/>-->
                                        <TextBlock x:Name="tbxStepRunOn" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE ALARM]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableAlarm">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisableAlarm" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE BUZZER]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableBuzzer">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectReturnConveyorOn"/>-->
                                        <TextBlock  x:Name="tbxDisableBuzzer" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE DOOR SENSORS]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableDoorSensor">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectReturnConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisableDoorSensor" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE SAFETY SENSORS]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisabaleSafetySensor">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisabaleSafetySensor" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                    </UniformGrid>

                    <UniformGrid Grid.Column="1" Columns="1" Rows="7">

                        <GroupBox Header="[BYPASS DETECT CHECK JIG]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btBypassDetectCheckJig">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxBypassDetectCheckJig" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[BYPASS VACUUM CHECK]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btBypassVacuumCheck">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxBypassVacuumCheck" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE VACUUM]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableVacuum">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisableVacuum" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>



                        <GroupBox Header="[DISABLE CH1]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableCH1">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisableCH1" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE CH2]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btDisableCH2">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxDisableCH2" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[MANUAL RUN]">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="*"/>-->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Name="btManualRun">
                                    <StackPanel>
                                        <!--<Rectangle x:Name="rectConveyorOn"/>-->
                                        <TextBlock x:Name="tbxManualRun" Style="{StaticResource TextBlock}">ON</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </GroupBox>





                    </UniformGrid>

                    <UniformGrid Grid.Column="2" Columns="1" Rows="7">

                    

                       

                       

                        

                        

                    </UniformGrid>

                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
